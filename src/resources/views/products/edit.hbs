
<div class="app__container">
  <form action="/products/{{product._id}}?_method=PUT" method="POST" class="form__create_product">
    <label for="fname">Name Product</label>
    <input type="text" id="fname" name="name" value="{{product.name}}">

    <label for="lname">Image</label>
    <input type="text" id="lname" name="image" value="{{product.image}}">

     <label for="lname">PriceOld</label>
    <input type="text" id="lname" name="price_old" value="{{product.price_old}}">

        <label for="lname">Brand</label>
    <input type="text" id="lname" name="brand" value="{{product.brand}}">

        <label for="lname">OriginName</label>
    <input type="text" id="lname" name="origin_name" value="{{product.origin_name}}">

        <label for="lname">PriceCurrent</label>
    <input type="text" id="lname" name="price_current" value="{{product.price_current}}">

        <label for="lname">Sold</label>
    <input type="text" id="lname" name="sold" value="{{product.sold}}">

  
    <input type="submit" value="Submit">
  </form>

</div>



